{% extends "base.j2" %}

{% block title %}Home{% endblock %}

{% block content %}
    <h1>Welcome to Plex Tools</h1>
    <p>This is the home page.</p>
    <p>Here is the Plex UserName: {{ name }}</p>
    <p>Here is the Plex Auth Token: {{ auth_token }}</p>

    <div class="container mt-4">
        <div class="row">
            <div class="col-md-4">
                <div class="card">
                    <div class="card-header">
                        Duplicate Songs Found
                    </div>
                    <div class="card-body">
                        <p class="card-text">{{ total_duplicates }}</p>
                    </div>
                </div>
            </div>
        </div>
    </div>{% endblock %}